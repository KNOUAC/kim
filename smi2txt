        textarea { width: 100%; height: 200px; margin-bottom: 10px; border: 1px solid #ddd; padding: 10px; box-sizing: border-box; }
        button { background: #007bff; color: white; border: none; padding: 10px 20px; border-radius: 4px; cursor: pointer; font-size: 16px; }
        button:hover { background: #0056b3; }
        #output { background: #f9f9f9; border: 1px solid #eee; padding: 15px; white-space: pre-wrap; margin-top: 20px; max-height: 400px; overflow-y: auto; }
    </style>
