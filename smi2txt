<body>

<div class="container">
    <h2>SMI -> TXT 변환기</h2>
    <p>SMI 파일 내용을 아래에 붙여넣으세요:</p>
    <textarea id="inputSmi" placeholder="<SAMI>... 내용을 붙여넣으세요"></textarea>
    <button onclick="convertSmi()">텍스트 추출하기</button>

    <h3>추출된 결과:</h3>
    <div id="output">결과가 여기에 표시됩니다.</div>
</div>

<script>
function convertSmi() {
    let str = document.getElementById('inputSmi').value;

    // 1. 태그 제거 로직
    str = str.replace(/<STYLE>[\s\S]*?<\/STYLE>/gi, ""); // 스타일 제거
    str = str.replace(/<SYNC Start=\d+>/gi, "");         // 싱크 태그 제거
    str = str.replace(/<P.*?>/gi, "");                   // P 태그 제거
    str = str.replace(/<br>/gi, "\n");                   // br 태그를 줄바꿈으로
    str = str.replace(/<.*?>/g, "");                     // 나머지 모든 태그 제거
    str = str.replace(/&nbsp;/g, " ");                   // 공백 문자 처리

    // 2. 빈 줄 정리
    let lines = str.split('\n');
    let cleanLines = lines.map(line => line.trim()).filter(line => line.length > 0);
    
    document.getElementById('output').innerText = cleanLines.join('\n');
}
</script>

</body>
